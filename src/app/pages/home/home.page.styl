@require "~styles/_vars"
@require "~styles/_utils"

:host
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  background-color: transparent

  .container
    text-align: center
    z-index: 3
    pointer-events: auto
    margin-bottom: 8rem
    padding: 0 2rem
    +on-tablet-up()
      padding: 0
      margin-bottom: 15rem

.home-page__title
  color: $color.purple
  margin-bottom: 1rem
  font-size: 3.5rem
  +on-tablet-portrait-up()
    font-size: 5rem
  +on-tablet-landscape-up()
    font-size: 6rem

.home-page__subtitle
  color: $color.indigo
  margin-top: 1rem
  font-size: 2rem
  +on-tablet-portrait-up()
    font-size: 2.6rem
