@require "~styles/_vars"
:host
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  background-color: transparent

  .container
    text-align: center
    margin-bottom: 15rem
    z-index: 3

.home-page__title
  color: $color.purple
  font-size: 5rem
  margin-bottom: 1rem

.home-page__subtitle
  color: $color.indigo
  font-size: 2.6rem
  margin-top: 1rem

.home-page__background-waves
  position: fixed
  bottom: 0
  min-width: 100%
